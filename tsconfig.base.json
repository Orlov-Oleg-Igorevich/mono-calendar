{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mono-calendar/interface": ["libs/interface/src/index.ts"],
      "@mono-calendar/contracts": ["libs/contracts/src/index.ts"],
      "@mono-calendar/dto": ["libs/dto/src/index.ts"],
      "@mono-calendar/shared": ["libs/shared/src/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
